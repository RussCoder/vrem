{
  "name": "vrem",
  "version": "0.0.0",
  "description": "An open-source automatic time-tracker",
  "author": "RussCoder",
  "license": "The Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/RussCoder/vrem.git"
  },
  "keywords": [
    "time",
    "automatic",
    "time-tracker"
  ],
  "os": [
    "win32"
  ],
  "bin": {
    "vrem": "dist/index.js"
  },
  "scripts": {
    "preuninstall": "node dist/index.js off",
    "postinstall": "tsc && node dist/postinstall.js",
    "vrem": "node dist/index.js",
    "tracker": "node dist/tracker.js --dev",
    "server": "nodemon src/server/server.js --watch src",
    "tsc": "tsc",
    "build": "node-gyp build"
  },
  "dependencies": {
    "better-sqlite3": "^7.1.2",
    "commander": "^7.0.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "node-addon-api": "*"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/node": "^14.14.37",
    "typescript": "^4.2.3"
  }
}
